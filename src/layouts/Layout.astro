---
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import WhatsAppButton from '../components/WhatsAppButton.astro';
import '../styles/global.css'

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="pt-br" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Kato Soluções Ambientais - Consultoria e Licenciamento" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" /> <meta name="generator" content={Astro.generator} />
        
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Titillium+Web:ital,wght@0,200;0,300;0,400;0,600;0,700;1,400&display=swap" rel="stylesheet">
        
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">

		<title>{title}</title>
	</head>
	<body class="font-sans text-grey bg-white antialiased">
		<Header />
		<main>
			<slot />

		</main>
		<Footer />
		<WhatsAppButton />
	</body>
</html>

<style is:global>
    h1, h2, h3, h4 {
        font-weight: bold;
    }
    p {
        
    }
</style>